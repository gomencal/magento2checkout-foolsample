<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="foolSample" xsi:type="array">
                                            <item name="component"  xsi:type="string">Misterge_FoolSample/js/view/FoolSample</item>
                                            <item name="sortOrder" xsi:type="string">90</item>
                                            <item name="displayArea" xsi:type="string">foolsample</item>
                                            <item name="config" xsi:type="array">
                                                <item name="title" xsi:type="string" translate="true">HEY</item>
                                                <item name="deps" xsi:type="string">checkout.steps.billing-step.payment</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
